datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Application {
  id            Int      @id @default(autoincrement())
  givenName     String
  familyName    String
  nationality   String
  gender        String
  dob           DateTime
  phone         String
  streetAddress String
  country       String
  stateProvince String
  city          String
  postalCode    String?
  academicTerm  String
  academicYear  Int
  englishTest   String
  other         String?
  testScore     Int
  gpa           Float
  transcriptFileName    String?
  idFileName            String?
  testResultFileName    String?
  signed        String
  name          String?
  status        String   @default("pending") // 'pending', 'approved', 'rejected'
  submittedAt   DateTime @default(now())
}

