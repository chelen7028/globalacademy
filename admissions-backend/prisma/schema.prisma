datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Application {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  gpa         Float
  idFileName  String?
  status      String   @default("pending") // 'pending', 'approved', 'rejected'
  submittedAt DateTime @default(now())
}

